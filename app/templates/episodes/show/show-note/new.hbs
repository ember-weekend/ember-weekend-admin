<div class="col-md-4 col-xs-4">
  <div class="panel panel-default" data-test-show-note-new>
    <div class="panel-heading clearfix">
      <h3 class="panel-title">
        Show Note
      </h3>
    </div>
    <div class="panel-body">
      {{show-note-form
        showNote=model
        resources=resources
        selectResource=(transition-to 'episodes.show.show-note.new' model.episode)
        newResource=(route-action 'newResource' model)
        save=(route-action 'save')
        cancel=(transition-to 'episodes.show' model.episode)
      }}
    </div>
  </div>

  {{#if model.resource}}

    {{resource-show resource=model.resource}}

    {{person-list
      title='Authors'
      allPeople=people
      add=(route-action 'addAuthor' model.resource)
      remove=(route-action 'removeAuthor' model.resource)
      people=model.resource.authors}}

  {{/if}}

  {{outlet}}

</div>
