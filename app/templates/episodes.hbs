<div class="col-md-4 col-xs-4" data-test-episodes>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        Episodes
      </h3>
    </div>
    <div class="list-group">
      {{#each model as |episode|}}
        {{#link-to 'episodes.show' episode.id class='list-group-item episode'}}
          <h4 class="list-group-item-heading" data-test-episode-title>
            {{episode.number}} - {{episode.title}}
          </h4>
          <p class="list-group-item-text" data-test-episode-description>
            {{episode.description}}
          </p>
        {{/link-to}}
      {{/each}}
    </div>
  </div>
</div>
{{outlet}}
